<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="15dp"
    app:cardElevation="15dp">
    <RelativeLayout
        android:id="@+id/item_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/circle_cropped_star"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"/>

        <TextView
            android:id="@+id/item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="UNIFORMS"
            android:layout_marginLeft="40dp"
            android:textSize="17dp"
            android:layout_marginTop="12.5dp"
            />
        <androidx.cardview.widget.CardView
            android:id="@+id/purchase_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/item_name">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/red"
                android:textColor="@color/white"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="7dp"
                android:textSize="12dp"
                android:paddingBottom="7dp"
                android:text="CLICK HERE TO PURCHASE"/>

        </androidx.cardview.widget.CardView>

        <ImageView
            android:id="@+id/store_logo"
             android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"/>

        <com.xfinity.dahdit.DottedLine
            android:id="@+id/line_one"
            android:layout_below="@+id/purchase_btn"
            android:layout_margin="15dp"
            app:dotRadius="0.5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line_one"
            android:layout_marginLeft="15dp"
            android:text="Item Title"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold"
            android:visibility="gone"
            android:fontFamily="@font/times_new_roman"
            />
        <TextView
            android:id="@+id/item_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_title"
             android:text="Item description"
            android:textColor="@color/white"
            android:padding="15dp"
            android:layout_marginTop="5dp"
            android:lineSpacingExtra="5dp"
             android:visibility="gone"
            android:textStyle="bold"
            android:textSize="14dp"
            android:textColorLink="@color/splash_src_clr"
            android:fontFamily="@font/times_new_roman"
            />
        <TextView
            android:id="@+id/show_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_description"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="20dp"
            android:text="Show more"
            android:textColor="@color/splash_src_clr"
            android:layout_marginTop="10dp"
            android:lineSpacingExtra="5dp"
            android:textSize="18dp"
            android:fontFamily="@font/times_new_roman"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            />

    </RelativeLayout>
</androidx.cardview.widget.CardView>