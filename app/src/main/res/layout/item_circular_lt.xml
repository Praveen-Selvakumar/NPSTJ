<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        app:cardCornerRadius="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/splash_src_clr"
            >
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="2.5dp"
                android:layout_marginLeft="5dp"
                >

                <RelativeLayout
                    android:id="@+id/rel_bg"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/grade_book_txt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="1 - SCHOOL  REOPENING CIRCULAR - \n CIRCULAR/NPS/ACAD/2021-22/P 03 (06/05/2021)"
                        android:textColor="@color/black"
                        android:layout_toLeftOf="@+id/circle_btn"
                         android:lineSpacingExtra="5dp"
                        android:textSize="15dp"
                        android:gravity="left"
                        android:visibility="visible"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="15dp"
                        android:layout_marginRight="5dp"
                         />

                    <TextView
                        android:id="@+id/description"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/grade_book_txt"
                        android:layout_marginTop="15dp"
                        android:layout_marginLeft="15dp"
                        android:textColor="@color/splash_src_clr"
                        android:text="Description"
                        android:visibility="gone"
                        android:textSize="14.5dp"
                        android:linksClickable="true"
                        android:textColorLink="@color/splash_src_clr"
                        />

                    <TextView
                        android:id="@+id/description_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/description"
                        android:layout_marginTop="15dp"
                        android:layout_marginLeft="15dp"
                        android:text="Description text"
                        android:visibility="gone"
                        android:linksClickable="true"
                        android:textSize="14.5dp"
                        android:textColorLink="@color/splash_src_clr"
                        />
                    <TextView
                        android:id="@+id/click_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/description_txt"
                        android:layout_marginTop="15dp"
                        android:layout_marginLeft="15dp"
                        android:textColor="@color/splash_src_clr"
                        android:text="Attachment - (Click here)"
                        android:layout_marginBottom="15dp"
                        android:visibility="gone"
                        android:textSize="14.5dp"
                        />

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/circle_btn"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@color/splash_src_clr"
                        android:layout_alignParentRight="true"
                        android:layout_margin="15dp"
                        />
                    <ImageView
                        android:id="@+id/cirlce_img_tint"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@drawable/plus_icon"
                        android:layout_alignParentRight="true"
                        android:layout_margin="20dp"
                        app:tint="@color/white" />


                </RelativeLayout>
            </androidx.cardview.widget.CardView>


        </RelativeLayout>
    </androidx.cardview.widget.CardView>


</RelativeLayout>

