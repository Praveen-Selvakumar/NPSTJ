<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.cardview.widget.CardView
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
         android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp">
             <RelativeLayout
                 android:id="@+id/rel_bg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">




            <ImageView
                android:id="@+id/img"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/feed_back_bg"/>

            <TextView
                android:id="@+id/subject"
                android:layout_marginLeft="20sp"
                android:layout_marginTop="60sp"
                android:layout_below="@+id/img"
                android:text="Subject"
                android:textSize="18dp"
                android:textStyle="bold"
                android:textColor="@color/splash_src_clr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/cd_feedback"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                app:cardElevation="0dp"
                android:layout_below="@+id/subject"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp">
                <EditText
                    android:id="@+id/ed_sub"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/fe_border"
                    android:paddingLeft="15dp"
                    android:textSize="14dp"
                    android:textColorHint="#a9a9a9"
                    android:hint="Enter Feedback Subject "/>

            </androidx.cardview.widget.CardView>

                 <TextView
                     android:id="@+id/email_txt"
                     android:layout_marginLeft="15dp"
                     android:layout_marginTop="20dp"
                     android:layout_below="@+id/cd_feedback"
                     android:text="Email"
                     android:textSize="17dp"

                     android:textStyle="bold"
                     android:textColor="@color/splash_src_clr"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"/>

                 <androidx.cardview.widget.CardView
                     android:id="@+id/email_cd"
                     android:layout_width="match_parent"
                     android:layout_height="40dp"
                     app:cardElevation="0dp"
                     android:layout_below="@+id/email_txt"
                     android:layout_marginTop="10dp"
                     android:layout_marginLeft="15dp"
                     android:layout_marginRight="15dp">
                     <RelativeLayout
                         android:layout_width="match_parent"
                         android:layout_height="match_parent">


                         <EditText
                             android:id="@+id/email_ed"
                             android:paddingLeft="15dp"
                             android:textSize="15dp"
                             android:textColor="@color/splash_src_clr"
                             android:inputType="textEmailAddress"
                             android:hint="Please Enter Email Address"
                             android:layout_width="match_parent"
                             android:layout_height="match_parent"
                             android:background="@drawable/fe_border"/>


                     </RelativeLayout>
                 </androidx.cardview.widget.CardView>



              <TextView
                android:id="@+id/msg"
                android:layout_marginLeft="20sp"
                android:layout_marginTop="20sp"
                android:layout_below="@+id/email_cd"
                android:text="Messages"
                android:textSize="18dp"
                android:textStyle="bold"
                android:textColor="@color/splash_src_clr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/fd_lt"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                app:cardElevation="0dp"
                android:layout_below="@+id/msg"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20sp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp">
                <EditText
                    android:id="@+id/ed_fb"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/fe_border"
                    android:textSize="14dp"
                    android:gravity="top"
                    android:textColorHint="#a9a9a9"
                    android:paddingTop="10dp"
                    android:paddingLeft="15dp"
                    android:hint="Your Feedback  "/>

            </androidx.cardview.widget.CardView>

            <View
                android:id="@+id/v_one"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:visibility="gone"
                android:background="@color/grey"
                android:layout_below="@+id/fd_lt"
                android:layout_marginTop="5dp"
                  android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"/>


                <TextView
                    android:id="@+id/submit_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Submit"
                    android:textColor="@color/white"
                    android:paddingLeft="45dp"
                    android:paddingRight="45dp"
                    android:paddingTop="10dp"
                    android:layout_centerHorizontal="true"
                      android:paddingBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="35dp"
                    android:background="@drawable/login_curvy_btn"
                    android:layout_below="@+id/v_one"
                    />


        </RelativeLayout>

    </androidx.cardview.widget.CardView>



</androidx.constraintlayout.widget.ConstraintLayout>