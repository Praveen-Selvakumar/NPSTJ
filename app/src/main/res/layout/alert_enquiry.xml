<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/alert_bg"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    >

    <TextView
        android:id="@+id/cat_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please select category"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:layout_margin="10dp"
        />

    <RadioButton
        android:id="@+id/category_r_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:textSize="18dp"
        android:checked="false"
        android:layout_margin="10dp"
        android:buttonTint="@color/splash_src_clr"
         />

    <View
        android:id="@+id/v"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/category_r_btn"
        android:background="#696969"/>

    <TextView
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Leave Request"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:layout_below="@+id/v"
        android:layout_margin="10dp"
        />

    <RadioButton
        android:id="@+id/request_r_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:textSize="18dp"
        android:visibility="gone"
        android:layout_below="@+id/v"
        android:layout_margin="10dp"
        android:buttonTint="@color/splash_src_clr"
        />

</RelativeLayout>