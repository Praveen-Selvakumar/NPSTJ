<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
         android:layout_marginTop="10dp"
         android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp">
     <RelativeLayout
         android:layout_width="match_parent"
         android:layout_height="match_parent">

     <ScrollView
         android:layout_width="match_parent"
         android:layout_height="wrap_content">
     <RelativeLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         >


         <ImageView
             android:id="@+id/img"
             android:layout_width="match_parent"
             android:layout_height="200dp"
             android:src="@drawable/feed_back_bg"/>

         <TextView
             android:id="@+id/category"
             android:layout_marginLeft="15dp"
             android:layout_marginTop="60dp"
             android:layout_below="@+id/img"
             android:text="Category"
             android:textSize="17dp"
             android:textStyle="bold"
             android:textColor="@color/splash_src_clr"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"/>

         <androidx.cardview.widget.CardView
             android:id="@+id/category_spi"
             android:layout_width="match_parent"
             android:layout_height="40dp"
             app:cardElevation="0dp"
             android:layout_below="@+id/category"
             android:layout_marginTop="10dp"
             android:layout_marginLeft="15dp"
             android:layout_marginRight="15dp">
          <RelativeLayout
              android:layout_width="match_parent"
              android:layout_height="match_parent">


              <EditText
                  android:id="@+id/cat_ed"
                  android:paddingLeft="15dp"
                  android:textSize="15dp"
                  android:textColor="@color/splash_src_clr"
                  android:textColorHint="@color/splash_src_clr"
                  android:focusableInTouchMode="false"
                  android:hint="Please Select Category"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:background="@drawable/fe_border"/>

              <ImageView
                  android:layout_width="25dp"
                  android:layout_height="25dp"
                  android:src="@drawable/arrow_drop_down"
                  android:layout_centerVertical="true"
                  android:layout_alignParentRight="true"
                  android:layout_marginRight="20dp"/>

          </RelativeLayout>
         </androidx.cardview.widget.CardView>
    <TextView
             android:id="@+id/email_txt"
             android:layout_marginLeft="15dp"
             android:layout_marginTop="60dp"
             android:layout_below="@+id/category"
             android:text="Email"
             android:visibility="gone"
             android:textSize="17dp"
             android:textStyle="bold"
             android:textColor="@color/splash_src_clr"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"/>

         <androidx.cardview.widget.CardView
             android:id="@+id/email_cd"
             android:layout_width="match_parent"
             android:layout_height="40dp"
             app:cardElevation="0dp"
             android:visibility="gone"
             android:layout_below="@+id/email_txt"
             android:layout_marginTop="10dp"
             android:layout_marginLeft="15dp"
             android:layout_marginRight="15dp">
          <RelativeLayout
              android:layout_width="match_parent"
              android:layout_height="match_parent">


              <EditText
                  android:id="@+id/email_ed"
                  android:paddingLeft="15dp"
                  android:textSize="15dp"
                  android:inputType="textEmailAddress"
                  android:textColor="@color/splash_src_clr"
                  android:textColorHint="@color/splash_src_clr"
                   android:hint="Please Enter Email Address"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:background="@drawable/fe_border"/>


          </RelativeLayout>
         </androidx.cardview.widget.CardView>

      <TextView
             android:id="@+id/msg"
             android:layout_marginLeft="15dp"
             android:layout_marginTop="20dp"
             android:layout_below="@+id/category_spi"
             android:text="Messages"
             android:textSize="18dp"
             android:textStyle="bold"
             android:textColor="@color/splash_src_clr"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"/>

         <androidx.cardview.widget.CardView
             android:id="@+id/msg_cd"
             android:layout_width="match_parent"
             android:layout_height="150dp"
             app:cardElevation="0dp"
             android:layout_below="@+id/msg"
              android:layout_marginTop="10dp"
             android:layout_marginBottom="20sp"
             android:layout_marginLeft="15dp"
             android:layout_marginRight="15dp">

         <EditText
              android:id="@+id/msg_ed"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="@drawable/fe_border"
             android:paddingLeft="15dp"
             android:hint="Your message"
             android:gravity="top"
             android:paddingTop="10dp"
             android:layout_margin="0.5dp"
             android:textColor="@color/splash_src_clr"
             android:textColorHint="@color/splash_src_clr"
             android:textSize="15dp"/>

         </androidx.cardview.widget.CardView>

         <View
             android:id="@+id/v_one"
             android:layout_width="match_parent"
             android:layout_height="1dp"
             android:visibility="gone"
             android:background="@color/grey"
               android:layout_marginLeft="20dp"
             android:layout_below="@+id/msg_cd"
             android:layout_marginRight="20dp"/>


         <TextView
             android:id="@+id/submit_btn"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="Submit"
             android:textColor="@color/white"
             android:paddingLeft="45dp"
             android:paddingRight="45dp"
             android:paddingTop="10dp"
             android:paddingBottom="10dp"
             android:layout_marginBottom="45dp"
             android:layout_marginTop="20dp"
             android:layout_centerHorizontal="true"
             android:layout_below="@+id/v_one"
             android:background="@drawable/login_curvy_btn"
             />


     </RelativeLayout>
     </ScrollView>

     </RelativeLayout>

    </androidx.cardview.widget.CardView>



</androidx.constraintlayout.widget.ConstraintLayout>