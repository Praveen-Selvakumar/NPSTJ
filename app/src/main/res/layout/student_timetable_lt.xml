<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


<LinearLayout
    app:layout_constraintTop_toTopOf="parent"
    android:id="@+id/select_lt"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    android:layout_width="match_parent"
    android:layout_height="55dp"
    android:background="#ececec"
    android:orientation="horizontal">

 <TextView
     android:id="@+id/mon"
     android:layout_width="0dp"
     android:layout_height="match_parent"
     android:layout_weight="1"
     android:text="Mon"
     android:textSize="15dp"
     android:background="@drawable/time_tablw_btn_bg"
     android:textStyle="bold"
     android:textColor="@color/lite_src_clr"
     android:gravity="center"/>

 <TextView
     android:id="@+id/tue"
     android:layout_width="0dp"
     android:layout_height="match_parent"
     android:layout_weight="1"
     android:text="Tue"
     android:textStyle="bold"
     android:textColor="@color/splash_src_clr"
     android:gravity="center"
     android:textSize="15dp"
     />

 <TextView
     android:id="@+id/wed"
     android:layout_width="0dp"
     android:layout_height="match_parent"
     android:layout_weight="1"
     android:text="Wed"
     android:textSize="15dp"
     android:textStyle="bold"
     android:textColor="@color/splash_src_clr"
     android:gravity="center"/>

 <TextView
     android:id="@+id/thu"
     android:layout_width="0dp"
     android:layout_height="match_parent"
     android:layout_weight="1"
     android:text="Thu"
     android:textStyle="bold"
     android:textColor="@color/splash_src_clr"
     android:gravity="center"
     android:textSize="15dp"
     />

 <TextView
     android:id="@+id/fri"
     android:layout_width="0dp"
     android:layout_height="match_parent"
     android:layout_weight="1"
     android:text="Fri"
     android:textStyle="bold"
     android:textColor="@color/splash_src_clr"
     android:gravity="center"
     android:textSize="15dp"
     />

<TextView
     android:id="@+id/sat"
     android:layout_width="0dp"
     android:layout_height="match_parent"
     android:layout_weight="1"
     android:text="Sat"
     android:textStyle="bold"
     android:textColor="@color/splash_src_clr"
     android:gravity="center"/>

</LinearLayout>

<androidx.recyclerview.widget.RecyclerView
     android:id="@+id/recycler_view"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     app:layout_constraintLeft_toLeftOf="parent"
     android:layout_marginLeft="10dp"
     app:layout_constraintRight_toRightOf="parent"
     android:layout_marginRight="10dp"
     app:layout_constraintTop_toBottomOf="@+id/select_lt"
     android:layout_marginTop="10dp"
     />
    <TextView
        android:id="@+id/alert_time_table"
        android:layout_marginTop="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/select_lt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/time_table_error_txt_border"
        android:text="Ohh! No Timetable Available"
        android:gravity="center"
        android:visibility="gone"
        android:paddingTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:paddingBottom="10dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>