<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<View
    android:id="@+id/v_one"
    app:layout_constraintTop_toTopOf="parent"
    android:layout_width="match_parent"
    android:layout_height="2dp"
    android:background="@color/grey"/>
<LinearLayout
    app:layout_constraintTop_toBottomOf="@+id/v_one"
    android:layout_width="match_parent"
    android:layout_height="60dp"
     android:orientation="horizontal">

    <RelativeLayout
        android:id="@+id/lt_home"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
         android:gravity="center"
         >

        <ImageView
            android:id="@+id/home_icon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/home_icon_btm"
            app:tint="@color/splash_src_clr"
            />
        <TextView
            android:id="@+id/home_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:text="HOME"
            android:textSize="10dp"
            android:layout_centerHorizontal="true"
             android:textColor="@color/splash_src_clr"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/home_icon"/>


    </RelativeLayout>
    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/grey"/>
    <RelativeLayout
        android:id="@+id/lt_profile"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
         android:gravity="center"
        >

        <ImageView
            android:id="@+id/profile_icon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/profile_btn_icon"
            app:tint="@color/profile_btm_clr"
            />
        <TextView
            android:id="@+id/profile_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:text="PROFILE"
            android:textSize="10dp"
            android:layout_centerHorizontal="true"
            android:textColor="@color/profile_btm_clr"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/profile_icon"/>


    </RelativeLayout>
    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/grey"/>

    <RelativeLayout
        android:id="@+id/lt_logout"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
         android:gravity="center"
        >

        <ImageView
            android:id="@+id/log_out_icon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/log_out_btm"
            app:tint="@color/logout_btm_clr"
            />
        <TextView
            android:id="@+id/log_out_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:text="LOG OUt"
            android:textSize="10dp"
             android:textColor="@color/logout_btm_clr"
            android:layout_marginTop="5dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/log_out_icon"/>

     </RelativeLayout>


</LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>