<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
       xmlns:app="http://schemas.android.com/apk/res-auto"
       xmlns:android="http://schemas.android.com/apk/res/android"
       android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:elevation="5dp"
      android:layout_marginRight="15dp"
      android:layout_marginTop="15dp"
      android:layout_marginLeft="10dp"
      android:background="@drawable/home_work_bg_one">

       <RelativeLayout
           android:id="@+id/rel_bg"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginLeft="10dp"
            android:background="@drawable/home_work_bg_two">



      <TextView
          android:id="@+id/class_section_name"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="ALL ALL"
          android:textSize="13dp"
          android:textColor="@color/black"
          android:layout_marginTop="15dp"
          android:layout_marginLeft="20dp"/>
      <TextView
          android:id="@+id/issued_date_txt"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="ISSUED DATE"
          android:layout_below="@+id/class_section_name"
          android:textSize="8dp"
          android:letterSpacing="0.1"
          android:layout_marginTop="35dp"
          android:layout_marginLeft="22.5dp"/>
      <TextView
          android:id="@+id/issued_date"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="23/12/2020"
          android:textStyle="bold"
          android:letterSpacing="0.01"
          android:layout_below="@+id/issued_date_txt"
          android:textSize="15dp"
           android:layout_marginLeft="15dp"/>

      <RelativeLayout
          android:id="@+id/rel_bg_two"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_toRightOf="@+id/issued_date_txt"
          android:layout_marginLeft="25sp"
          android:background="#f1f1f1">


          <de.hdodenhof.circleimageview.CircleImageView
              android:id="@+id/cirlce_br_one"
              android:layout_width="10dp"
              android:layout_height="10dp"
              android:layout_marginLeft="15dp"
              android:layout_marginTop="17.5dp"
              android:src="@drawable/home_work_circle_border_bg"/>
          <de.hdodenhof.circleimageview.CircleImageView
              android:id="@+id/cirlce_br_two"
              android:layout_below="@+id/dotted_line"
              android:layout_width="10dp"
              android:layout_height="10dp"
               android:layout_marginLeft="15dp"
               android:src="@drawable/home_work_circle_border_bg"/>
      <ImageView
          android:id="@+id/dotted_line"
          android:layout_width="20dp"
          android:layout_height="15dp"
          android:src="@drawable/dotted_barline"
          app:tint="#eeab47"
          android:layout_below="@+id/cirlce_br_one"
          android:layout_toRightOf="@+id/cirlce_br_one"
          android:layout_marginLeft="-15.5dp"
           />

          <TextView
              android:id="@+id/subject_name"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_toRightOf="@+id/cirlce_br_one"
              android:layout_marginTop="15dp"
              android:text="TEST FROM NPSTJ"
              android:textSize="12.5dp"
              android:layout_marginLeft="15dp"
              android:textStyle="bold"
              />
          <TextView
              android:id="@+id/assignment_title"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_toRightOf="@+id/cirlce_br_one"
              android:layout_marginTop="5dp"
              android:text="TEST FROM NPSTJ"
              android:textSize="12.5dp"
              android:layout_below="@+id/subject_name"
              android:layout_marginLeft="15dp"
              android:textStyle="bold"
              />

          <TextView
              android:id="@+id/des_txt"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_below="@+id/assignment_title"
              android:text="Description"
              android:textSize="14dp"
              android:visibility="gone"
              android:layout_marginTop="15dp"
              android:textColor="@color/splash_src_clr"
              android:layout_marginLeft="15dp"/>

          <TextView
              android:id="@+id/description"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_below="@+id/des_txt"
              android:text="Test from NPSTJ"
              android:visibility="gone"
              android:textSize="15dp"
              android:layout_marginTop="7dp"
              android:layout_marginLeft="15dp"
              />
          <TextView
              android:id="@+id/end_date_txt"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_below="@+id/description"
              android:text="END DATE"
              android:textSize="10dp"
               android:layout_marginTop="10dp"
              android:layout_marginLeft="15dp"
              />
          <TextView
              android:id="@+id/end_date"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_below="@+id/end_date_txt"
              android:text="21/10/2021"
              android:textStyle="bold"
              android:textColor="#ff0000"
              android:textSize="15dp"
              android:layout_marginTop="5dp"
              android:layout_marginLeft="15dp"
              android:layout_marginBottom="10dp"
              />
          <TextView
              android:id="@+id/teacher_txt"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_below="@+id/description"
              android:text="TEACHER"
              android:textSize="10dp"
              android:layout_toRightOf="@+id/end_date_txt"
               android:layout_marginTop="10dp"
              android:layout_marginLeft="60dp"
              />
          <TextView
              android:id="@+id/teacher_name"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_below="@+id/end_date_txt"
              android:text="TEACHER NAME"
              android:textStyle="bold"
              android:textSize="14.5dp"
               android:layout_toRightOf="@+id/end_date_txt"
              android:layout_marginTop="5dp"
              android:layout_marginLeft="60dp"
              android:layout_marginBottom="10dp"
              />

          <de.hdodenhof.circleimageview.CircleImageView
              android:id="@+id/circle_bg"
              android:layout_width="20dp"
              android:layout_height="20dp"
              android:layout_alignParentRight="true"
              android:layout_marginTop="15dp"
              android:layout_marginRight="10dp"
              android:src="@color/splash_src_clr"/>

 <ImageView
     android:id="@+id/circle_tint_img"
     android:layout_width="12.5dp"
     android:layout_height="12.5dp"
     android:src="@drawable/plus_icon"
     android:layout_alignParentRight="true"
     android:layout_marginTop="18.5dp"
     android:layout_marginRight="14dp"
     app:tint="@color/white" />
      </RelativeLayout>

    </RelativeLayout>



  </RelativeLayout>

